---
export interface FAQSectionProps {
    faqs: Array<{ id: number; question: string; answer: string }>;
}

const { faqs } = Astro.props as FAQSectionProps;
---

<section
    class="container mx-auto my-16"
    id="accordion-open"
    data-accordion="open"
>
    <h5 class="mb-5 text-2xl text-center font-bold dark:text-white">
