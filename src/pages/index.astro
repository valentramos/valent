---
import Layout from "../layouts/Layout.astro";
import BannerSection from "../components/BannerSection.astro";
import FaqsSection from "../components/FaqsSection.astro";
import Gallery from "../components/Gallery.astro"
import faqs from "../data/faqs.json";

import { Image } from 'astro:assets';

const servicio = "prototipado";
const preguntasParaServicio = faqs[servicio];
---

<Layout 
	title="Prototipado" 
	description="Servicios de prototipado de alta calidad para productos digitales, ayudando a transformar tus ideas en prototipos funcionales y atractivos."
	keywords="prototipado de productos digitales, desarrollo de prototipos, diseño de productos, UX, UI, PM, La Paz, Bolivia"
	image="/img/prototype/crm-kanban.png"
>
	
	<BannerSection
		title="Prototipa tus Ideas"
		subtitle="Aplicaciones móviles, sitios web, landing-pages, dashboards y más!"
		phrase="Diseño que inspira"
		image="/img/prototype/crm-kanban.png"
	/>

	<section class="container mx-auto my-4 text-center">
		<h2 class="mb-2 lg:text-2xl text-lg font-bold dark:text-white">
			Un prototipo ahorra incontables reuniones y previene costosos
			errores de inversión.
		</h2>
		<a
			href="https://www.pinterest.es/valentramos"
			target="_blank"
			class="inline-flex text-2xl items-center font-medium text-blue-500 hover:underline"
		>
			Ver portafolio
			<svg
				class="w-4 h-4 ms-2 rtl:rotate-180"
				aria-hidden="true"
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 14 10"
			>
				<path
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M1 5h12m0 0L9 1m4 4L9 9"></path>
			</svg>
		</a>
	</section>

	<section class="container mx-auto my-16">
		<div
			class="grid lg:grid-cols-2 md:grid-cols-2 grid-cols-1 items-center"
		>
			<div class="m-auto p-5 lg:p-10">
				<Image
					class="h-auto max-w-full rounded-md animated-img"
					src="/img/prototype/bolivar.png"
					alt="Captura de pantalla prototipo"
					width={1280}
					height={800}
				/>
			</div>
			<div>
				<h5
					class="font-bold text-transparent text-3xl bg-clip-text bg-gradient-to-r from-[#ffd756] via-[#e2fe5c] to-[#27fdbe] mb-2 w-fit"
				>
					Agilidad
				</h5>
				<p class="mb-3 text-gray-500 dark:text-gray-200">
					El proceso de prototipado asegura una transición suave y
					eficiente de la idea al prototipo, adaptándose rápidamente a
					tus necesidades y feedback.
				</p>
				<h5
					class="font-bold text-transparent text-3xl bg-clip-text bg-gradient-to-r from-[#05e6a9] via-[#02abd7] to-[#016ce4] mb-2 w-fit"
				>
					Interactividad
				</h5>
				<p class="mb-3 text-gray-500 dark:text-gray-200">
					Experimenta una interacción casi real con prototipos
					interactivos que te permiten sentir el producto antes de
					cualquier inversión en desarrollo.
				</p>
			</div>
		</div>
	</section>

	<!-- <Gallery images={images} /> -->

	<Gallery>
		<Image src="/img/prototype/bolivar.png" width={1280} height={800} alt="Descripción de la imagen 1" class="h-auto max-w-full rounded-md animated-img" />
		<Image src="/img/prototype/capcem.png" width={1280} height={800} alt="Descripción de la imagen 1" class="h-auto max-w-full rounded-md animated-img" />
		<Image src="/img/prototype/cies.png" width={1280} height={800} alt="Descripción de la imagen 1" class="h-auto max-w-full rounded-md animated-img" />
		<Image src="/img/prototype/dobo.png" width={1280} height={800} alt="Descripción de la imagen 1" class="h-auto max-w-full rounded-md animated-img" />
		<Image src="/img/prototype/oit.png" width={1280} height={800} alt="Descripción de la imagen 1" class="h-auto max-w-full rounded-md animated-img" />
		<Image src="/img/prototype/utha.png" width={1280} height={800} alt="Descripción de la imagen 1" class="h-auto max-w-full rounded-md animated-img" />
	</Gallery>

	<FaqsSection faqs={preguntasParaServicio} />

</Layout>
