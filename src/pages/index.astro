---
import Layout from "../layouts/Layout.astro";
import Banner from "../components/Banner.astro";
import faqs from "../data/faqs.json";
import FaqsSection from "../components/FaqsSection.astro";
import Gallery from "../components/Gallery.astro"

const servicio = "prototipado";
const preguntasParaServicio = faqs[servicio];
---

<Layout title="Inicio">
	<Banner
		title="Prototipa tus Ideas"
		subtitle="Aplicaciones móviles, sitios web, landing-pages, dashboards y más!"
		phrase="Diseño que inspira"
		image="/img/prototype/crm-kanban.png"
	/>

	<section class="container mx-auto my-16 text-center">
		<h5 class="mb-2 text-2xl font-bold dark:text-white">
			Un prototipo ahorra incontables reuniones y previene costosos
			errores de inversión.
		</h5>
		<a
			href="https://www.pinterest.es/valentramos"
			target="_blank"
			class="inline-flex items-center font-medium text-blue-500 hover:underline"
		>
			Ver portafolio
			<svg
				class="w-4 h-4 ms-2 rtl:rotate-180"
				aria-hidden="true"
				xmlns="http://www.w3.org/2000/svg"
				fill="none"
				viewBox="0 0 14 10"
			>
				<path
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M1 5h12m0 0L9 1m4 4L9 9"></path>
			</svg>
		</a>
	</section>

	<section class="container mx-auto my-16">
		<div
			class="grid lg:grid-cols-2 md:grid-cols-2 grid-cols-1 items-center"
		>
			<div class="m-auto p-10">
				<img
					class="h-auto max-w-full rounded-md animated-img"
					src="/img/prototype/bolivar.png"
					alt=""
				/>
				<!-- <iframe class="rounded-xl animated-banner" width="200" height="427" src="https://xd.adobe.com/embed/b479169f-c677-4ea7-bef0-febf0a7d4558-e12a/?fullscreen&hints=off" frameborder="0" allowfullscreen></iframe> -->
				<!-- <iframe class="rounded-xl" width="195" height="422" src="https://xd.adobe.com/embed/18b7fea6-ca75-4a78-b199-6b2c35350673-4de4/" frameborder="0" allowfullscreen></iframe> -->
			</div>
			<div>
				<h5
					class="font-bold text-transparent text-3xl bg-clip-text bg-gradient-to-r from-[#ffd756] via-[#e2fe5c] to-[#27fdbe] mb-2 w-fit"
				>
					Agilidad
				</h5>
				<p class="mb-3 text-gray-500 dark:text-gray-200">
					El proceso de prototipado asegura una transición suave y
					eficiente de la idea al prototipo, adaptándose rápidamente a
					tus necesidades y feedback.
				</p>
				<h5
					class="font-bold text-transparent text-3xl bg-clip-text bg-gradient-to-r from-[#05e6a9] via-[#02abd7] to-[#016ce4] mb-2 w-fit"
				>
					Interactividad
				</h5>
				<p class="mb-3 text-gray-500 dark:text-gray-200">
					Experimenta una interacción casi real con prototipos
					interactivos que te permiten sentir el producto antes de
					cualquier inversión en desarrollo.
				</p>
			</div>
		</div>
	</section>

	<Gallery
		img1="/img/prototype/bolivar.png"
		img2="/img/prototype/capcem.png"
		img3="/img/prototype/cies.png"
		img4="/img/prototype/dobo.png"
		img5="/img/prototype/oit.png"
		img6="/img/prototype/utha.png"
	/>

	<FaqsSection faqs={preguntasParaServicio} />

</Layout>
